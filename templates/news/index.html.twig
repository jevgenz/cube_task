{% extends 'layout.html.twig' %}

{% block title %}TVNET news{% endblock %}

{% block body %}
	{% if rss %}
		<div class="container" id="tourpackages-carousel">
			<div>
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
			<div class="row">
				{% for item in rss.channel.item|slice(0,5) %}
					<div class="col-xs-18">
						<div class="thumbnail">
							<div class="caption">
								<h4><a href="{{ item.link }}">{{ item.title }}</a></h4>
								<img src="{{ item.enclosure.attributes.url }}">
							</div>
							<p>{{ item.description }}</p>
						</div>
					</div>
				{% endfor %}
			</div><!-- End row -->
		</div><!-- End container -->
	{% else %}
		{{ 'Nav datu' }}
	{% endif %}
{% endblock %}
